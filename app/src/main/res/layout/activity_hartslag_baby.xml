<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B7CEEC"
    android:weightSum="25"
    android:keepScreenOn="true"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/zoekHartslag_baby"
                android:id="@+id/tvAdemhaling"
                style="@style/TextView_sjabloom"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/hartslag_baby_duidelijk" />



            <TextView
                style="@style/TextView_sjabloom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/andere_manier_hartslag"
                 />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView"

                android:src="@drawable/hartslag_baby" />

            <TextView
                style="@style/TextView_sjabloom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/UitlegHartslagTeller"
                android:id="@+id/tvHartslag_teller_uitleg_baby" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/knopHartslagTeller"
                    android:id="@+id/knopHartslagTeller_baby"
                    style="@style/CustomStyleButton"
                    android:onClick="knopHartslagTeller_baby"/>
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/progressBar15sec_baby" />

            </LinearLayout>
            <TextView
                style="@style/TextView_sjabloom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/tvUitslagHartslag"
                android:visibility="invisible" />








        </LinearLayout>
    </ScrollView>



</LinearLayout>